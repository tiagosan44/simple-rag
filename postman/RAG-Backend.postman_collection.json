        {
          "name": "Embed — default (debug=false)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/embed", "host": ["{{baseUrl}}"], "path": ["api","embed"] },
