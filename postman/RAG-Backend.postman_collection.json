              "mode": "raw",
              "raw": "{\n  \"text\": \"hello world\",\n  \"debug\": false\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200', () => pm.response.to.have.status(200));",
                  "const json = pm.response.json();",
                  "pm.expect(json).to.have.property('embedding_id');",
                  "pm.expect(json).to.have.property('vector_dim');",
                  "pm.expect(json.vector).to.be.oneOf([undefined, null]);"
                ]
              }
            }
          ]
        },
